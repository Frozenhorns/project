#include	<stdlib.h>
#include	<stdio.h>
#include	<time.h>
#include	<sys/types.h>
#include	<unistd.h>

#include	"raytracer.h"
#include	"global.h"
#include	"parse.h"
#include	"display.h"
#include	"init.h"
#include	"event.h"
#include	"box.h"
